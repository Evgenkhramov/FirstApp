<resources>
  <!-- Splash style -->
  <style name="Theme.Splash" parent="AppTheme">
    <item name="android:windowBackground">@drawable/screen</item>
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
     <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="android:windowActionBar">false</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="MyTheme" parent="AppTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">#5A8622</item>
  </style>
  
  <!-- Button-->
  <style name="OrangeButton" parent="@style/Widget.AppCompat.Button.Colored">
      <item name="colorButtonNormal">#FF9840</item>
      <item name="colorControlHighlight">#FFB473</item>
      <item name="android:textColor">#EDEDED</item>
      <item name="android:translationZ">3dp</item>
      <item name="android:textSize">14sp</item>
      <item name="android:stateListAnimator">@null</item>
      <item name="android:elevation">4dp</item>
   
  </style>

</resources>
